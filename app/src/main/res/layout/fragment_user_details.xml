<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:paddingTop="@dimen/margin16dp"
    app:cardCornerRadius="@dimen/margin2dp"
    app:cardElevation="@dimen/margin2dp"
    tools:context="com.holidaypirates.view.fragments.PostsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin16dp">

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="--"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin16dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/margin4dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Loading.."
            android:textAppearance="?android:textAppearanceSmall" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin16dp">

            <ImageView
                android:id="@+id/imgMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/margin8dp"
                android:src="@drawable/ic_map" />

            <ImageView
                android:id="@+id/imgEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/margin8dp"
                android:src="@drawable/ic_mail" />

            <ImageView
                android:id="@+id/imgWeb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/margin8dp"
                android:src="@drawable/ic_web_link" />

        </TableRow>
    </LinearLayout>
</android.support.v7.widget.CardView>